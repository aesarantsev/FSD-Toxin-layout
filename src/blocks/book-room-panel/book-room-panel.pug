include ../text-field/text-field
include ../dropdown/dropdown
include ../btn/btn
include ../info-button/info-button

mixin bookRoomPanel(numberRoom="888", isLuxe = true, cost = "9 900")
  .book-room-panel
    .book-room-panel__content

      .book-room-panel__content__room-info
        .book-room-panel__content__room-info__number
          .book-room-panel__content__room-info__number__num
            span.book-room-panel__content__room-info__number__num__item="№ " + numberRoom
          if (isLuxe)
            span.book-room-panel__content__room-info__number__luxe="Люкс"
        .book-room-panel__content__room-info__cost
          span
            strong= cost + "₽ "
          span="в сутки"

      form
        .book-room-panel__content__date
          +textField({title: ["прибытие","выезд"], placeholder: "ДД.ММ.ГГГГ", type: "date"})

        .book-room-panel__content__guests
          +dropdown("гости")

        .book-room-panel__content__pay-info
          .book-room-panel__content__pay-info__item
            .book-room-panel__content__pay-info__item__service
              span.book-room-panel__content__pay-info__item__service__title=cost + "₽ х 4 суток"
            span.book-room-panel__content__pay-info__item__cost= "39 960₽"
          .book-room-panel__content__pay-info__item
            .book-room-panel__content__pay-info__item__service
              span.book-room-panel__content__pay-info__item__service__title= "Сбор за услуги: скидка 2 179₽"
              .book-room-panel__content__pay-info__item__service__info
                +infoButton()
            span.book-room-panel__content__pay-info__item__cost= "0₽"
          .book-room-panel__content__pay-info__item
            .book-room-panel__content__pay-info__item__service
              span.book-room-panel__content__pay-info__item__service__title="Сбор за дополнительные услуги"
              .book-room-panel__content__pay-info__item__service__info
                +infoButton()
            span.book-room-panel__content__pay-info__item__cost= "300₽"

        .book-room-panel__content__total
          h2.book-room-panel__content__total__title= "Итого"
          .book-room-panel__content__total__tab
          h2.book-room-panel__content__total__cost= "38 081₽"

        .book-room-panel__content__btn
          +btn({text: "забронировать", type: "arrowButton", buttonType:"submit"})

      