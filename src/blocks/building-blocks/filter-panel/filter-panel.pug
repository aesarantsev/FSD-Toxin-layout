include ../../primitive-blocks/text-field/text-field
include ../../primitive-blocks/dropdown/dropdown
include ../../primitive-blocks/range-slider/range-slider
include ../../primitive-blocks/checkbox-list/checkbox-list
include ../../primitive-blocks/checkbox-list-rich/checkbox-list-rich

mixin filterPanel()
  .filter-panel
    .filter-panel__content
      .filter-panel__content__date
        +textField(["даты пребывания в отеле"],"Выберите даты","filterDate")
      .filter-panel__content__guests
        +dropdown("Гости")
      .filter-panel__content__cost-range
        +rangeSlider("диапазон цены","Стоимость за сутки пребывания в номере")
      .filter-panel__content__conditions
        +checkBoxList("Условия",['Можно курить','Можно с питомцами', 'Можно пригласить гостей (до 10 человек)'], false, [1,2])
      .filter-panel__content__availability
        +checkboxListRich("доступность",[{title:"Широкий коридор", desc:"Ширина коридоров в номере не менее 91 см."},{title:"Помощник для инвалидов", desc:"На 1 этаже вас встретит специалист  и проводит до номера."}],[])
        //- +checkBoxList("доступность",['Широкий коридор','Помощник для инвалидов'], false)
      .filter-panel__content__room-amenities
        +dropdown("удобства номера","roomAmenities", [2,2,1])
      .filter-panel__content__additional-amenities
        +checkBoxList("дополнительные удобства",['Завтрак','Письменный стол', 'Стул для кормления','Кроватка','Телевизор','Шампунь','Телевизор','Шампунь'], true, [1,2,3])
    