include ../btn/btn

-
  let links_default = [
    {title:"Home", link:"#", isActive:true, subLinks:[]},
    {title:"About Us", link:"#", isActive:false, subLinks:[]},
    {title:"Services", link:"#", isActive:false, subLinks:[{title:"Search rooms", link:"#"},{title:"Add room", link:"#"}]},
    {title:"Careers", link:"#", isActive:false, subLinks:[]},
    {title:"News", link:"#", isActive:false, subLinks:[]},
    {title:"Documentation", link:"#", isActive:false, subLinks:[]}
    ];

mixin header(links = links_default, auth=false, userName = "Cosmin Negoita", authButtons= ["Login", "Register"])
  header.header
      .container
        input(type="checkbox" id="checkbox-menu")
        label(for="checkbox-menu").header__content
          ul.header__content__menu.header__content__menu_touch
            li.header__content__menu__logo
              a(href="/"): include ./images/Logo.svg
            each item in links
              li.header__content__menu__item
                if(item.isActive)
                  a.header__content__menu__item__link_bold(href=item.link)=item.title
                else
                  a.header__content__menu__item__link(href=item.link)=item.title
                  if(item.subLinks.length!=0)
                    i.header__content__menu__item__link__arrow.material-icons.md-24="expand_more"
            if(!auth)
              li.header__content__menu__item
                +btn(authButtons[0], "borderButton", "/autorization.html",true)
              li.header__content__menu__item
                +btn(authButtons[1], "fillButton", "/registration.html",true)
              
          span.header__toggle ☰


