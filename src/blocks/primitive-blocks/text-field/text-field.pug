//- Типы TextField:
    -'subscription'
    -'date'
    -'filterDate'
    -''
//- Пример исопльзования:
    +textField(["Email"],"Placeholder") - text Field
    +textField(["Email"],"Placeholder", "subscription") - subscription text field
    +textField(["Email"],"Placeholder", "subscription")

mixin textField(title=[], placeholder="textField", type="", textValue = "")
  .text-field

    if type=="subscription"
      .text-field__subscription
        input(type="text" class="text-field__input text-field_subscription"  placeholder=placeholder)
        input(type="submit" value="" class = "text-field__submit")
      
    else if type=="date"
      .text-field__date
        .text-field__date__item
          if title[0] !=""
            h3.text-field__title=title[0]
          input(type="text" class="text-field__input text-field_date datepicker-here start_one" data-range="true" placeholder=placeholder)
        .text-field__date__item
          if title[1] !=""
            h3.text-field__title=title[1]
          input(type="text" class="text-field__input text-field_date end_one"  placeholder=placeholder)
      
    else if type=="filterDate"
      if title[0] !=""
        h3.text-field__title=title[0]
      input(type="text" class="text-field__input text-field_filter-date datepicker-here" data-range="true" placeholder=placeholder)
      
    else
      if title[0] !=""
        h3.text-field__title=title[0]
      input(type="text" class="text-field__input"  placeholder=placeholder value=textValue)

      

